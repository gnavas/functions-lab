Question 1:

function maxOfTwoNumbers(x,y){
     if(x>y){
         return x;
     } else if(y>x) {
         return y;
     } else {
         console.log("Please enter two different numbers as arguments.");
     }
 }
var answer = maxOfTwoNumbers(1000,28);
console.log(answer);

Question 2:

function maxOf3(a,b,c) {
    if(a>b && a>c){
        return a;
    } else if(b>a && b>c) {
        return b;
    } else if(c>a && c>b){
        return c;
    } else {
        console.log("Please use 3 unique #s as your arguments‚Äù);
    }
}
var answer = maxOf3(115,115,115)
console.log(answer)

Question 3:

function letter(x) {
    if(x==="a" || x==="e" || x==="i" || x==="o" || x==="u"){
        return true;
    } else {return false;
        }
}
var let = letter("d")
console.log(let)

